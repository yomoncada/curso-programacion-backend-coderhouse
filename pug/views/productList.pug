extends ./layout

block productList
    div(class="row justify-content-center align-items-center")
        div(class="col-lg-4")
            div(class="row")
                div(class="col-lg-12 mb-5")
                    h1(class="font-weight-bold") Vista de Productos
                div(class="col-lg-12 mb-5")
                    if products.length > 0
                        table(class="table table-dark")
                            thead
                                tr(class="text-center")
                                    th Nombre
                                    th Precio
                                    th Foto
                            tbody
                            each item in products
                                tr(class="text-center")
                                    td= item.title
                                    td= `$${item.price}`
                                    td
                                        img(class="w-25" src=item.thumbnail alt=item.title)
                    else
                        div(class="alert alert-warning h4" role="alert") No se encontraron productos.
                div(class="col-lg-12 text-center")
                    a(class="btn btn-link" href="/") Volver al formulario
