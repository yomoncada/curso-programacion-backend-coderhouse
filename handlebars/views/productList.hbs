<div class="row justify-content-center align-items-center">
    <div class="col-lg-4">
        <div class="row">
            <div class="col-lg-12 mb-5">
                <h1 class="font-weight-bold">Vista de Productos</h1>
            </div>
            <div class="col-lg-12 mb-5">
                {{#if list}}
                <table class="table table-dark">
                    <thead>
                        <tr class="text-center">
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Foto</th>
                        </tr>    
                    </thead>
                    <tbody>
                    {{#each products}}
                        <tr class="text-center">
                            <td>{{this.title}}</td>
                            <td>${{this.price}}</td>
                            <td><img class="w-25" src="{{this.thumbnail}}" alt="{{this.title}}"></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                {{else}}
                <div class="alert alert-warning h4" role="alert">
                    No se encontraron productos.
                </div>
                {{/if}}
            </div>
            <div class="col-lg-12 text-center">
                <a class="btn btn-link" href="/">Volver al formulario</a>
            </div>
        </div>
    </div>
</div>
